.hideSearch{
  width: 100%;
  position: fixed;
  border: 1px solid black;
  background-color: white;
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  z-index: 2;
  display: none;
}

.hideSearch.active{
  display: block;
}

.searchWrap{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.leftSearchPart{
  width: 87%;
  border: 1px solid green;
  display: flex;
  border-radius: 30rpx;
}

.leftSearchPart span{
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid red;
  width: 10%;
}

/* .leftSearchPart span icon{

} */

.leftSearchPart input{
  border: 1px solid orange;
  width: 90%;
  height: 100%;
}

.rightSearchPart{
  border: 1px solid red;
  font-size: 30rpx;
  color: #aaa;
}

.header{
  padding: 5rpx 0;
  /* border: 1rpx solid green; */
  margin: 20rpx 0;
}

.title{
  display: flex;
  flex-direction: column;
  align-items: center;
  float: left;
}

.title view:nth-child(1){
  font-size: 40rpx;
}

.title view:nth-child(2){
  font-size: 26rpx;
  color: #aaa;
}

.search{
  border: 1rpx solid black;
  float: right;
  margin-top: 17rpx;
  width: 30%;
  border-radius: 30rpx;
}

.search span{
  float: left;
  width: 40rpx;
  margin-right: 15rpx;
  margin-top: -2rpx;
}

.search span icon{
  padding-bottom: 12rpx;
  margin-left: 20rpx;
}

.search input{
  margin-left: -105%;
  font-size: 25rpx;
}

swiper{
  height: 550rpx;
}

swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.imgContent{
  height: 66%;
}

.slide-image{
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
}

.clearfix::after{
  display: block;
  clear: both;
  content: '';
}

.section{
  margin: 30rpx 0;
}

.swiperHeader{
  height: 270rpx;
  border-radius: 15rpx;
}

.swiperFooter, .footerHeader, .footerFooter{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.footerHeader{
  font-size: 35rpx;
  margin-top: 10rpx;
  height: 70rpx;
  -webkit-line-clamp: 2;
}

.footerFooter{
  height: 100rpx;
  font-size: 25rpx;
  color: #aaa;
}

.section .fiveIcon{
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}

.fiveIcon{
  border-bottom: 1rpx solid #aaa;
}

.fiveIcon .iconWrap{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ieColor{
